<style type="text/css">
    .login-form {
        width: 340px;
        margin: 50px auto;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn-login {
        min-height: 38px;
        border-radius: 2px;
    }

    .btn-login {
        font-size: 15px;
        font-weight: bold;
    }
</style>

<div style="height: 50px;"></div>

<div class="login-form">
    <form method="post" action="/Home/Product">
        <h2 class="text-center">Log in</h2>
        @if (TempData["msgLoi"] != null && !String.IsNullOrEmpty(TempData["msgLoi"].ToString()))
                    {
                        <small><span class="error">@TempData["msgLoi"]</span></small>
                    }
        <div class="form-group">
            <input type="text" name="login" class="form-control" placeholder="Username" required="required"
                @{ var focusOnLogin = (String.IsNullOrEmpty(Convert.ToString(TempData["login_oldValue"]))
                                    || !String.IsNullOrEmpty(Convert.ToString(TempData["msgLoi"])))
                                    ? "autofocus = autofocus" : ""; } @focusOnLogin
                                    value="@TempData["login_oldValue"]">
                @if (TempData["msgLoi_Login"] != null && !String.IsNullOrEmpty(TempData["msgLoi_Login"].ToString()))
                {
                    <small><span class="error">@TempData["msgLoi_Login"]</span></small><br />
                }
        </div>

        <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Password" required="required"
                @{ var focusOnPwd = (String.IsNullOrEmpty(Convert.ToString(TempData["password_oldValue"]))
                        && !String.IsNullOrEmpty(Convert.ToString(TempData["login_oldValue"])))
                        ? "autofocus = autofocus" : ""; } @focusOnPwd>
            
                @if (TempData["msgLoi_Password"] != null && !String.IsNullOrEmpty(TempData["msgLoi_Password"].ToString()))
                {
                    <small><span class="error">@TempData["msgLoi_Password"]</span></small><br />
                }

        </div>

        
                    

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block btn-login">Log in</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
            <a href="#" class="pull-right">Forgot Password?</a>
        </div>
    </form>
    <p class="text-center"><a href="#">Create an Account</a></p>
</div>


