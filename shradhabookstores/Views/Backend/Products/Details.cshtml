@model shradhabookstores.EF.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Backend/Shared/_Layout.cshtml";
}

<h2>Product Details</h2>
<hr />
<div class="row">
    <div class="col-md-3">
        <center>
            @if (String.IsNullOrEmpty(ViewBag.Product.ProductImage))
            {
                <img class="bd-placeholder-img card-img-top" width="50%" height="200" src="~/Content/images/no-photo.png" style="padding: 10px 0 10px 0; border: 1px solid #ccc;">
            }
            else
            {
                <img class="bd-placeholder-img card-img-top" width="50%" height="200" src="~/UploadedFiles/@ViewBag.Product.ProductImage" style="padding: 10px 0 10px 0; border: 1px solid #ccc;">
            }
            <br /><br />
            <p>
                <button>@Html.ActionLink("<< Back", "Index")</button> |
                <button>@Html.ActionLink("Edit", "Edit", new { id = Model.ProductId })</button>
                
            </p>
        </center>
    </div>
    <div class="col-md-8">
            
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ProductId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ProductId)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProductType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductType)
            </dd>

            <dt>
