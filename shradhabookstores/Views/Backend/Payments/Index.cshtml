@model IEnumerable<shradhabookstores.EF.Payment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Backend/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PaymentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PaymentId }) |
            @Html.ActionLink("Details", "Details", new { id = item.PaymentId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.PaymentId })
        </td>
    </tr>
}

</table>
